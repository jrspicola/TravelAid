<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/city_detail"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".CityDetailActivity"
    tools:ignore="MergeRootFrame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/city_detail_city"
            android:textSize="32sp"
            android:paddingBottom="2dp"
            android:text="placeholder city"
            android:textColor="#ff000000"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/city_detail_country"
            android:textSize="24sp"
            android:paddingBottom="5dp"
            android:text="placeholder country"
            android:textColor="#ff000000"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/city_detail_desc"
            android:textSize="20sp"
            android:text="placeholder description" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/city_detail_url"
            android:layout_gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/return_to_list"
                android:onClick="returnToList"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView><!-- From: file:/C:/Users/Joe/Documents/CodingChallenge/TripAdvisor/app/src/main/res/layout/fragment_city_detail.xml -->